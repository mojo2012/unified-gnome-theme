	GtkWidget	::focus-padding		= 0

	bg[NORMAL]      			= shade (1.08, @bg_color)
	bg[PRELIGHT]    			= @bg_color
	bg[INSENSITIVE] 			= shade (1.04, @bg_color)

	engine "murrine" {
		gradient_shades     		= {0.96,1.04,1.05,1.18}
		glazestyle 			= 1
		contrast 			= 1.0
		roundness			= 0
	}
}

